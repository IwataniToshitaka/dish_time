<div>
  <%= image_tag @airticle.get_image %>
  <p>料理名：<%= @airticle.title %></p>

  <p>説明：<%= @airticle.body %></p>

  <p><%= image_tag @airticle.get_image %></p>
  <p>投稿者：<%= @airticle.user_id %></p>
  <p>投稿日：<%= @airticle.created_at.strftime('%Y/%m/%d') %></p>
  <% if current_user.id == @airticle.user_id %>
  <p><%= link_to "delete", airticles_path(@airticle), method: :delete, data: { confirm: "削除してもよろしいですか？" } %></p>
  <p><%= link_to "edit", edit_airticle_path(@airticle) %></p>
  <% end %>
</div>