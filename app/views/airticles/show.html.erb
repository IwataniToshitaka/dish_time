<div>
  <%= image_tag @airticle.get_image %>
  <p>料理名：<%= @airticle.title %></p>

  <p>説明：<%= @airticle.body %></p>


  <p>投稿者：<%= image_tag @airticle.get_image %></p>
  <p>投稿日：<%= @airticle.created_at.strftime('%Y/%m/%d') %></p>
  <% if current_user.id == @airticle.user_id %>
    <%= link_to "削除", airticles_path, method: :delete, data: { confirm: "削除してもよろしいですか？" } %>
  <% end %>
</div>