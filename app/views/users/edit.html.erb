<div class="container">
<!--<div class="row">-->

<%= form_with model: @user do |f| %>


  <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <h1>
  <i class="fas fa-cog"></i>
  User Setting
  </h1>
  <%= f.label :Name %><br>
  <%= f.text_field :name %>


  <div style="padding-top: 20px;">
  <%= f.label :profile_image %><br>
  <%= f.file_field :profile_image, accept: "image/*" %>
  </div>


  <div style="padding-top: 20px;">
  <%= f.label :introduction %><br>
  <%= f.text_field :introduction %>
  </div>

<div style="padding-top: 20px;">
<!--ボタンの上にスペース-->
<%= f.submit "Update User" %>
 </div>
<% end %>
</div>
