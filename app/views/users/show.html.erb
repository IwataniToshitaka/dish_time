<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User</h2>
        <table>
          <tbody>
            <tr>

            </tr>
            <tr>
              <th>name:</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th>introduction:</th>
              <td><%= @user.introduction %></td>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(@user.id), style: "width: 200px; background-color: white; border: 1px solid gray;", class: "btn btn-primary" do %>
          <i class="fas fa-user-cog" style="color: gray;"></i>
        <% end %>

        <h2 class="mt-3">New post</h2>
        <%= link_to new_article_path(@user.id), style: "width: 200px; background-color: white; border: 1px solid gray;", class: "btn btn-primary" do %>
          <i class="fas fa-book" style="color: orange;"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">
      <h2>Posts</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>写真</th>
            <th>料理名</th>
            <th>レシピ</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= image_tag article.get_image, size: "50x50" %></td>
              <td class="text-nowrap"><%= link_to article.title, article_path(article.id), style: "color: #343a40; font-weight: bold;" %></td>
              <td><%= article.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>