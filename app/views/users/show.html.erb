<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <table>
          <tbody>
            <tr>
              <th>name:</th>
              <td><%= @user.id %></td>
            </tr>
            <tr>
              <th>introduction:</th>
              <td><!-- ここに紹介文を表示 --></td>
            </tr>
          </tbody>
        </table>

        <%= link_to edit_user_path(@user.id), style: "width: 200px; background-color: white; border: 1px solid gray;", class: "btn btn-primary" do %>
          <i class="fas fa-user-cog" style="color: gray;"></i>
        <% end %>

        <h2 class="mt-3">New post</h2>
        <%= form_with model: Airticle.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Body</h4>
          <%= f.text_area :body %><br/>

          <%= button_tag type: "submit", class: "btn btn-success", style: "background-color: lightpink; color: black; width: 150px; border:none" do %>Create Book
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Airticles</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @airticles.each do |airticle| %>
            <tr>
              <td><%= link_to airticle.title, airticle_path(airticle.id) %></td>
              <td><%= airticle.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>