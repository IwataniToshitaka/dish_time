<section class="inner">
	<h2 class="section-ttl">ジャンル管理</h2>
	<div class="mb3">
		<h3>ジャンル新規登録</h3>
	</div>
	<div class="mb3">
		<h3>ジャンル一覧</h3>
		<table class="genre_info has_border">
			<thead>
				<tr>
					<th>ジャンル名</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @article_genres.each do |article_genre| %>
					<tr>
						<td><%= link_to article_genre.name, articles_path(article_genre_id: article_genre.id), class: "underline" %></td>
						<td>
							<% if genre.is_active? %>
								<span class="text-active">有効</span>
							<% else %>
								<span class="text-invalid">無効</span>
							<% end %>
						</td>
						<td class="text-center"><%= link_to "編集", edit_genre_path(article_genre), class: "btn btn-success" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</section>