<%= form_with model: @article do |f| %>

      <div class="form-group">
        <label><%= f.label :title, "料理名" %></label>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <label><%= f.label :body, "説明" %></label>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <label><%= f.label :image, "画像" %></label>
        <%= f.file_field :image, accept: "image/*" %>
      </div>

      <div>
        <td><%= f.label :genre_id, "ジャンル" %></td>
        <td class="select_field"><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        <%= link_to "ジャンルを追加する？", genres_path, class: "btn btn-primary btn-light" %>
      </div>

      <div>
        <td><%= f.submit class: "btn btn-success" %></td>
      </div>

<% end %>