<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">写真</th>
            <th scope="col">レシピ名</th>
            <th scope="col">投稿者</th>
            <th scope="col">いいね</th>
          </tr>
        </thead>
        <tbody>
          <% @airticles.each do |airticle| %>
            <tr>
              <td><%= image_tag airticle.get_image, size: "50x50" %></td>
              <td><%= link_to airticle.title, airticle_path(airticle.id), style: "color: #343a40; font-weight: bold;" %></td>
              <td><%= airticle.user_id %></td>
              <td>
              <% if current_user.already_liked?(airticle) %>
                <%= link_to airticle_likes_path(airticle), method: :delete do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              <% else %>
                <%= link_to airticle_likes_path(airticle), method: :post do %>
                  <i class="fas fa-heart"></i>
                <% end %>
              <% end %>
              <%= airticle.likes.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
